<%- include("layouts/header") %>
    <main class="container mt-4">
        <div class="col text-center">
            <h1>Halaman Detail</h1>
        </div>
        <% if (!contact) { %>
            <div class="alert alert-danger text-center" role="alert">
                Kontak Tidak Ada
            </div>
            <% }else { %>
                <div class="card" style="width: 18rem;">
                    <div class="card-body">
                        <h5 class="card-title">
                            <%= contact.nama %>
                        </h5>
                        <h6 class="card-subtitle mb-2 text-body-secondary">
                            <%= contact.email %>
                        </h6>
                        <p class="card-text">
                            <%= contact.nohp %>
                        </p>
                        <form action="/contact?_method=DELETE" method="POST" class="d-inline">
                            <input type="hidden" name="nama" value="<%= contact.nama %>">
                            <button type="submit" class="btn btn-danger badge">Delete Contact</button>
                        </form>
                        <form action="/editContact" method="GET" class="d-inline">
                            <input type="hidden" name="nama" value="<%= contact.nama %>">
                            <button type="submit" class="btn btn-primary badge">Edit Contact</button>
                        </form>
                        <a href="../contact" class="card-link d-block"> &laquo;back to contact</a>
                    </div>
                </div>
                <% } %>
    </main>
    <%- include("layouts/footer") %>