<%- include("layouts/header") %>

  <main class="container mt-4">
    <h1 class="text-center mb-5">My Contact</h1>
    <table class="table text-center table-striped table-hover table-bordered">
      <thead>
        <tr class="table-secondary">
          <th scope="col">No</th>
          <th scope="col">Nama</th>
          <th scope="col">Nomor</th>
          <th scope="col">Email</th>
          <th scope="col">Aksi</th>
        </tr>
      </thead>
      <% if (contacts.length==0) { %>
        <tbody>
          <tr>
            <td colspan="5" class="text-center">
              <div class="alert alert-warning" role="alert">
                DATA MASIH KOSONG!
              </div>
            </td>
          </tr>
        </tbody>
        <% } else { %>

          <tbody>
            <% contacts.forEach((e,i)=> { %>
              <tr>
                <th scope="row" class="table-secondary">
                  <%= i+1 %>
                </th>
                <td>
                  <%= e.nama %>
                </td>
                <td>
                  <%= e.nohp %>
                </td>
                <td>
                  <%= e.email %>
                </td>
                <td><a href="/contact/<%= e.nama %>" class="btn btn-primary badge text-bg-info">Detail</a></td>
              </tr>
              <% }) %>
          </tbody>
          <% } %>
    </table>
  </main>
  <div class="container mt-4 alert alert-succses text-center mt-5">
    <a href="<%= halaman.addContact %>" class="btn btn-primary">Tambah Data</a>
  </div>

  <%- include("layouts/footer") %>